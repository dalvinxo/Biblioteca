@model PaginatedList<Biblioteca.Models.TiposBibliografium>

@{
    ViewData["Title"] = "Index";
}

<h1 class="title_main">Tipos de Bibliografías</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a class="text-mute text-decoration-none text-secondary" asp-area="" asp-controller="Home"
                asp-action="Index">
                Dashboard
            </a>
        </li>
        <li class="breadcrumb-item fw-bolder active" aria-current="page">Bibliografía</li>
    </ol>
</nav>

<div class="mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a class="btn btn-outline-primary bg-white text-primary text-uppercase fst-italic" asp-action="Create"> 
            <i class="fa-solid fa-plus"></i> Nueva bibliografía
        </a>
        <form asp-action="Index" class="d-flex" method="get">
            <input type="search" name="searchString" class="form-control rounded" placeholder="⌕ Search..."
                aria-label="Search" value="@ViewData["CurrentFilter"]" />
        </form>
    </div>

    <div class="p-2 bg-white rounded">

        <table class="align-middle table table-custom table-striped table-bordered">
            <thead>
                <tr>
                    <th class="text-center">#</th>
                    <th>Descripcion</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@item.Identificador</td>
                        <td>@item.Descripcion</td>

                        <td>
                            <span class="@(item.Estado ? "green-circle" : "red-circle")"></span>
                            @(item.Estado ? "Activo" : "Inactivo")
                        <td>
                                @* <div class="btn-group"> *@
                            <a asp-action="Details" asp-route-id="@item.Identificador"
                                class="btn border border-dark btn-light px-2">
                                <i class="fa-regular fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Identificador"
                                class="btn border border-dark btn-light px-2">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Identificador"
                                class="btn border border-dark btn-light px-2">
                                <i class="fa-regular fa-trash-can"></i>
                            </a>
                                @* </div> *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @{
            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
        }

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-start">
                <li class="page-item @prevDisabled">
                    <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)"
                        asp-route-currentFilter="@ViewData["CurrentFilter"]" class="page-link">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a asp-action="Index" asp-route-pageNumber="@i" asp-route-currentFilter="@ViewData["CurrentFilter"]"
                            class="page-link">
                            @i
                        </a>
                    </li>
                }
                <li class="page-item @nextDisabled">
                    <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)"
                        asp-route-currentFilter="@ViewData["CurrentFilter"]" class="page-link">
                        @* Next *@
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>

    </div>

</div>
