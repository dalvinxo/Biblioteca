@model Biblioteca.Models.Libro

@{
    ViewData["Title"] = "Editar Libro";
}


<h1 class="title_main">Editar Libro</h1>

<div class="mt-4">
    <form class="row g-3" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Identificador" />
            <div class="col-7 col-xs-12 col-md-6 form-group">
                <label asp-for="Descripcion" class="fw-bold"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="col-7 col-xs-12 col-md-6 form-group">
                <label asp-for="SignaturaTopografica" class="fw-bold"></label>
                <input asp-for="SignaturaTopografica" class="form-control" />
                <span asp-validation-for="SignaturaTopografica" class="text-danger"></span>
            </div>
            <div class="col-7 col-xs-12 col-md-3 form-group">
                <label asp-for="Isbn" class="fw-bold"></label>
                <input asp-for="Isbn" class="form-control" />
                <span asp-validation-for="Isbn" class="text-danger"></span>
            </div>
            <div class="col-7 col-xs-12 col-md-3 form-group">
                <label asp-for="TipoBibliografia" class="fw-bold"></label>
                <select asp-for="TipoBibliografia" class="form-control" asp-items="ViewBag.TipoBibliografia"></select>
                <span asp-validation-for="TipoBibliografia" class="text-danger"></span>
            </div>
            <div class="col-7 col-xs-12 col-md-3 form-group">
                <label asp-for="Autores" class="fw-bold"></label>
                <select asp-for="Autores" class="form-control" asp-items="ViewBag.Autores"></select>
                <span asp-validation-for="Autores" class="text-danger"></span>
            </div>
            <div class="col-7 col-xs-12 col-md-3 form-group">
                <label asp-for="Editora" class="fw-bold"></label>
                <select asp-for="Editora" class="form-control" asp-items="ViewBag.Editora"></select>
                <span asp-validation-for="Editora" class="text-danger"></span>
            </div>
            <div class="col-7 col-xs-12 col-md-3 form-group">
                <label asp-for="AnioPublicacion" class="fw-bold"></label>
                <input asp-for="AnioPublicacion" class="form-control" />
                <span asp-validation-for="AnioPublicacion" class="text-danger"></span>
            </div>
            <div class="col-7 col-xs-12 col-md-3 form-group">
                <label asp-for="Ciencia" class="fw-bold"></label>
                <select asp-for="Ciencia" class="form-control" asp-items="ViewBag.Ciencia"></select>
                <span asp-validation-for="Ciencia" class="text-danger"></span>
            </div>
            <div class="col-7 col-xs-12 col-md-3 form-group">
                <label asp-for="Idioma" class="fw-bold"></label>
                <select asp-for="Idioma" class="form-control" asp-items="ViewBag.Idioma"></select>
                <span asp-validation-for="Idioma" class="text-danger"></span>
            </div>
           <div class="form-check form-switch ms-2">
            <label class="form-check-label" for="flexSwitchCheckEstado">@Html.DisplayNameFor(model =>
                model.Estado)</label>
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckEstado" asp-for="Estado" />
        </div>
            <div class="row row-cols-2 justify-content-start form-group mt-5">
            <div class="col-1">
                <button class="btn btn-primary" type="submit">Editar</button>
            </div>
            <div class="col-1">
                <a class="btn btn-light bg-white text-dark border border-dark" asp-action="Index">Regresar</a>
            </div>
        </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
