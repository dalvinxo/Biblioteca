@model Biblioteca.Models.PrestamoDevolucion

@{
    ViewData["Title"] = "Eliminar Prestamo o Devolución";
}

<h1 class="title_main">Eliminar Prestamo o Devolución</h1>

<div class="mt-4">
    <h3>Detalle</h3>
    <hr />
    <div class="bg-white rounded gy-2 me-auto w-75 w-xs-100">
        <table class="table fs-5">
            <thead>
                <tr>
                    <th scope="col">Campo</th>
                    <th scope="col">Valor</th>
                </tr>
            </thead>
         <tbody>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.NoPrestamo)</td>
                    <td>@Html.DisplayFor(model => model.NoPrestamo)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.CantidadDias)</td>
                    <td>@Html.DisplayFor(model => model.CantidadDias)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Empleado)</td>
                    <td>@Html.DisplayFor(model => model.EmpleadoNavigation.Nombre)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Libro)</td>
                    <td>@Html.DisplayFor(model => model.LibroNavigation.Descripcion)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Usuario)</td>
                    <td>@Html.DisplayFor(model => model.UsuarioNavigation.Nombre)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.FechaPrestamo)</td>
                    <td>@Html.DisplayFor(model => model.FechaPrestamo)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.FechaDevolucion)</td>
                    <td>@Html.DisplayFor(model => model.FechaDevolucion)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.MontoXdia)</td>
                    <td>@Html.DisplayFor(model => model.MontoXdia)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.CantidadDias)</td>
                    <td>@Html.DisplayFor(model => model.CantidadDias)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Comentario)</td>
                    <td>@Html.DisplayFor(model => model.Comentario)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Estado)</td>
                    <td>
                        <span class="@(Model.Estado ? "green-circle" : "red-circle")"></span>
                         @(Model.Estado ? "Devuelto" : "Prestado")
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="NoPrestamo" />
        <div class="row row-cols-2 justify-content-start form-group mt-5">
            <div class="col-1">
                <button class="btn btn-danger" type="submit">Eliminar</button>
            </div>
            <div class="col-1">
                <a class="btn btn-light bg-white text-dark border border-dark" asp-action="Index">Cancelar</a>
            </div>

        </div>
    </form>
</div>