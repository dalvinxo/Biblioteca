<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblioteca</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Biblioteca.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <header class="col-xs-12 col-md-2 header-navbar" style="height: 100vh;">
                <nav class="navbar navbar-dark bg-dark navbar-expand-sm navbar-toggleable-sm box-shadow flex-md-column align-items-start container" style="height: 100%;">
                    <div class="mb-2 p-4">
                        <a class="navbar-brand mb-2 h1 font-weight-bold" asp-area="" asp-controller="Home"
                            asp-action="Index">Biblioteca</a>
                    </div>

                    <div class="navbar-collapse collapse d-flex align-items-start">
                        <ul class="navbar-nav flex-md-column w-100 p-3">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home"
                                    asp-action="Index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Libros"
                                    asp-action="Index">Libros</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Usuarios"
                                    asp-action="Index">Usuarios</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Idiomas"
                                    asp-action="Index">Idiomas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Autores"
                                    asp-action="Index">Autores</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="TiposBibliografia"
                                    asp-action="Index">Bibliografía</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Ciencias"
                                    asp-action="Index">Ciencias</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Editoras"
                                    asp-action="Index">Editoras</a>
                            </li>
                        </ul>
                    </div>

                </nav>
            </header>

            <div class="col-xs-12 col-md-10">
                <main role="main" class="container content" class="pb-3">
                    @RenderBody()
                </main>
            </div>

        </div>
    </div>


    @* <footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2024 - Biblioteca - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
