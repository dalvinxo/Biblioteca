@model Biblioteca.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<h1 class="title_main">Nuevo Usuario</h1>

<div class="mt-4">
    <form class="row g-3 needs-validation" asp-action="Create">
        <input type="hidden" asp-for="Estado" value="true" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-7 form-group">
            <label asp-for="Nombre" class="control-label fw-bold"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="col-7 form-group">
            <label asp-for="Cedula" class="control-label fw-bold"></label>
            <input asp-for="Cedula" class="form-control" />
            <span asp-validation-for="Cedula" class="text-danger"></span>
        </div>
        <div class="col-7 form-group">
            <label asp-for="TipoPersona" class="control-label fw-bold"></label>
            <select asp-for="TipoPersona" class="form-control" asp-items="ViewBag.TipoUser"></select>
            <span asp-validation-for="TipoPersona" class="text-danger"></span>
        </div>
        <div class="row row-cols-3 justify-content-start form-group mt-5">
            <div class="col-1">
                <button class="btn btn-success" type="submit">Crear</button>
            </div>
            <div class="col-2 d-flex justify-content-center">
                <button class="btn btn-light bg-white text-dark border border-dark" type="reset">
                    Borrar Datos
                </button>
            </div>
            <div class="col-1">
                <a class="btn btn-light bg-white text-dark border border-dark" asp-action="Index">Cancelar</a>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
