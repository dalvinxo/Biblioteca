@model Biblioteca.Models.UsuariosEmpleado

@{
    ViewData["Title"] = "Crear Administrador";
}

<h1 class="title_main">Nuevo Administrador</h1>

<div class="mt-4">
    <form class="row g-3 needs-validation" asp-action="Create">
        <input type="hidden" asp-for="Estado" value="true" />
        <input type="hidden" asp-for="RestablecerPassword" value="true" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-7 form-group">
            <label asp-for="Name" class="control-label fw-bold"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-7 form-group">
            <label asp-for="Password" class="control-label fw-bold"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="col-7 form-group">
            <label asp-for="Rol" class="control-label fw-bold"></label>
            <input asp-for="Rol" class="form-control" />
            <span asp-validation-for="Rol" class="text-danger"></span>
        </div>
        <div class="col-7 form-group">
            <label asp-for="Empleado" class="control-label fw-bold"></label>
            <select asp-for="Empleado" class="form-control" asp-items="ViewBag.Empleado">
                <option value="">Seleccione un empleado</option>
            </select>
        </div>
        <div class="row row-cols-3 justify-content-start form-group mt-5">
            <div class="col-1">
                <button class="btn btn-success" type="submit">Crear</button>
            </div>
            <div class="col-2 d-flex justify-content-center">
                <button class="btn btn-light bg-white text-dark border border-dark" type="reset">
                    Borrar Datos
                </button>
            </div>
            <div class="col-1">
                <a class="btn btn-light bg-white text-dark border border-dark" asp-action="Index">Cancelar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
