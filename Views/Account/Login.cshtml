@model LoginModel

@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
    ViewData["Title"] = "Login";
}
<div class="min-vh-100 d-flex justify-content-center align-items-center">
    <div class="card card-login rounded shadow">
        <div class="card-body">
            <h5 class="card-title text-center fw-bold">Biblioteca <span class="text-primary">UNAPEC</span></h5>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-action="Login" method="post">
                <div class="form-group my-3">
                    <label asp-for="Username" class="control-label fw-bold"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="Password" class="control-label fw-bold"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-outline-primary text-center my-2">Login</button>
                </div>

            </form>
        </div>
    </div>
</div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
