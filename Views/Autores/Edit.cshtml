@model Biblioteca.Models.Autore

@{
    ViewData["Title"] = "Editar Autor";
}


<h1 class="title_main">Editar Autor</h1>

<div class="mt-4">
    <form class="row g-3" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Identificador" />
            <div class="col-7 form-group">
                <label asp-for="Nombre" class="control-label fw-bold"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
<div class="col-7 form-group">
            <label asp-for="PaisOrigen" class="control-label fw-bold"></label>
            <select asp-for="PaisOrigen" class="form-control" asp-items="ViewBag.Paises">
                <option value="">Seleccione un pa√≠s</option>
            </select>
            <span asp-validation-for="PaisOrigen" class="text-danger"></span>
        </div>
        <div class="col-7 form-group">
            <label asp-for="IdiomaNativo" class="control-label fw-bold"></label>
            <select asp-for="IdiomaNativo" class="form-control" asp-items="ViewBag.Idiomas">
                <option value="">Seleccione un idioma</option>
            </select>
            <span asp-validation-for="IdiomaNativo" class="text-danger"></span>
        </div>
            <div class="form-check form-switch ms-2">
            <label class="form-check-label" for="flexSwitchCheckEstado">@Html.DisplayNameFor(model =>
                model.Estado)</label>
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckEstado" asp-for="Estado" />
        </div>

        <div class="row row-cols-2 justify-content-start form-group mt-5">
            <div class="col-1">
                <button class="btn btn-primary" type="submit">Editar</button>
            </div>
            <div class="col-1">
                <a class="btn btn-light bg-white text-dark border border-dark" asp-action="Index">Regresar</a>
            </div>
        </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
