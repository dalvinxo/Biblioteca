        new ColumnConfig<Biblioteca.Models.Autore> { Header = "#", ValueSelector = item => item.Identificador, CssClass = "text-center" },
        new ColumnConfig<Biblioteca.Models.Autore> { Header = "Nombre", ValueSelector = item => item.Nombre ?? "Desconocido" },
